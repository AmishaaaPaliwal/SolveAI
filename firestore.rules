rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access during development
    // TODO: Update these rules for production use
    match /{document=**} {
      allow read, write: if true;
    }

    // Users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Patients can be read by authenticated users
    match /patients/{patientId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        (request.auth.token.role == 'hospital' ||
         request.auth.token.role == 'dietitian' ||
         request.auth.token.role == 'admin');
    }

    // Hospital staff can manage their hospital's data
    match /hospitals/{hospitalId} {
      allow read, write: if request.auth != null &&
        request.auth.token.hospitalId == hospitalId;
    }

    // Dietitians can access their assigned patients
    match /dietitians/{dietitianId} {
      allow read, write: if request.auth != null &&
        request.auth.uid == dietitianId;
    }

    // Vitals can be read by authorized personnel
    match /vitals/{vitalId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        (request.auth.token.role == 'hospital' ||
         request.auth.token.role == 'dietitian');
    }

    // Mess menus can be read by all authenticated users
    match /messMenus/{menuId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        request.auth.token.role == 'hospital';
    }

    // Diet plans can be read by patients and dietitians
    match /dietPlans/{planId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        request.auth.token.role == 'dietitian';
    }

    // Consultations can be managed by dietitians
    match /consultations/{consultationId} {
      allow read, write: if request.auth != null &&
        request.auth.token.role == 'dietitian';
    }
  }
}